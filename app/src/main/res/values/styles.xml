<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/AppTheme.Base.DrawerArrowToggele</item>
        <!--   <item name="android:textColorPrimary">@color/white</item>-->
    </style>

    <style name="AppTheme.Base.DrawerArrowToggele" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!--editText 风格-->
    <style name="MyEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <!--<item name="colorAccent">@color/white</item>-->
    </style>

    <!--TextInputLayout header文字风格-->
    <style name="MyTextInputHint" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
